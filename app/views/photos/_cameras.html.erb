<div class="row text">
  <h3><%= @rover.name %>'s Cameras</h3>
  <div class="row">
    <div class="small-3 columns">
      Abbreviation
    </div>

    <div class="small-9 columns">
      Full Name
    </div>
  </div>
  <% @rover.cameras.each do |camera| %>
    <div class="row">

      <div class="small-3 columns">
        <%= camera.name %>
      </div>

      <div class="small-9 columns">
        <%= camera.full_name %>
      </div>

    </div>
  <% end %>
</div>
